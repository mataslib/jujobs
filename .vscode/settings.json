{
  // Specifies how the working directories ESLint is using are computed.
  // ESLint resolves configuration files (e.g. eslintrc, .eslintignore)
  // relative to a working directory so it is important to configure this correctly.
  "eslint.workingDirectories": ["./frontend", "./backend", "./shared"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "**/dist": true,
    "**/cdk.out": true,
    "**/tsctracedir": true
  },
  "terminal.integrated.tabs.title": "${cwdFolder}: ${process}",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 10,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.lh": true,
    "frontend/.next": true,
    "backend/coverage/*": true
    // "backend": true
    // "**/tsconfig.tsbuildinfo": true
  },
  // "typescript.tsserver.maxTsServerMemory": 16384,
  "typescript.tsdk": "/usr/lib/node_modules/typescript/lib",
  "typescript.tsserver.useSyntaxServer": "auto"

  // "explorer.excludeGitIgnore": true
}
